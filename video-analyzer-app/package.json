{
  "name": "video-analyzer-app",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "backend": "cd .. && .venv/bin/python src/api_server.py",
    "start-servers": "concurrently --kill-others \"npm run dev\" \"npm run backend\"",
    "electron": "concurrently --kill-others \"npm run dev\" \"npm run backend\" \"wait-on http://localhost:5173 http://localhost:5001/api/health && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.videoanalyzer.app",
    "productName": "Video Analyzer",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
